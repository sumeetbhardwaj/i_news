{{>admin/header}}
{{getAllPost.cate}}
  <div id="admin-content">
      <div class="container">
          <div class="row">
              <div class="col-md-10">
                  <h1 class="admin-heading">All Posts</h1>
              </div>
              <div class="col-md-2">
                  <a class="add-new" href="/admin/add_post">add post</a>
              </div>
              <div class="col-md-12">
                  <table class="content-table">
                      <thead>
                          {{!-- <th>S.No.</th> --}}
                          <th>Title</th>
                          <th>Category</th>
                          <th>Date</th>
                          <th>Author</th>
                          <th>Edit</th>
                          <th>Delete</th>
                      </thead>
                      <tbody>
                          {{#each getAllPost}}
                          <tr>
                              {{!-- <td class='id'>{{@index}}</td> --}}
                              <td>{{this.title}}</td>
                              <td>{{this.category.name}}</td>
                              <td>{{this.createdAt}}</td>
                              <td>Admin</td>
                              <td class='edit'><a href='update_post?id={{this._id}}'><i class='fa fa-edit'></i></a></td>
                              <td class='delete'><a href='delete_post?id={{this._id}}'><i class='fa fa-trash-o'></i></a></td>
                          </tr>
                          {{/each}}
                      </tbody>
                  </table>
                  <ul class='pagination admin-pagination'>
                      <li class="active"><a>1</a></li>
                      <li><a>2</a></li>
                      <li><a>3</a></li>
                  </ul>
              </div>
          </div>
      </div>
  </div>
  {{>admin/footer}}
